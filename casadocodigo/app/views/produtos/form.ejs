<html>
    <body>
        <div class="erros">
            <%if(errosValidacao){ %>
                <ul>
                        <%for(var i=0;i<errosValidacao.length;i++){%>
                            <li><%=errosValidacao[i].param%> - <%=errosValidacao[i].msg%></li>
                        <%}%>
                </ul>
            <%}%>
        </div>
        <form action="/produtos/salva" method="post"> 
            <div>
                <label for="nome">Titulo</label>
                <input type="text" id="nome" name="nome" value="<%=produto.nome%>" placeholder="coloque o titulo do livro aqui">
            </div>
            <div>
                <label for="preco">Preço</label>
                <input type="text" id="preco" name="preco" value="<%=produto.preco%>" placeholder="coloque o preço">
            </div>
            <div>
                <label for="descricao">descricao</label>
                <textarea cols="20" rows="10" id="descricao" name="descricao" placeholder="coloque a descricao do livro aqui"><%=produto.descricao%></textarea>
            </div>

            <input type="submit" value="gravar"/>
        </form>
    </body>
</html>